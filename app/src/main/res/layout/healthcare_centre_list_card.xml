<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/healthcare_centre_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1dp"
    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dip">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Health Centre"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_name"
            android:layout_marginTop="1dip"
            android:layout_toStartOf="@+id/img_driving_direction"
            android:singleLine="false"
            android:text="2568 Main Street\nBuffalo NY- 14214"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />

        <TextView
            android:id="@+id/txt_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_address"
            android:layout_marginTop="1dip"
            android:layout_toStartOf="@+id/img_driving_direction"
            android:text="Ph: (716) 862-0511"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />

        <TextView
            android:id="@+id/txt_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/txt_name"
            android:layout_marginRight="0dip"
            android:text="@string/txt_driving_direction"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/primary_dark" />

        <ImageView
            android:id="@+id/img_driving_direction"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/txt_direction"
            android:layout_below="@+id/txt_direction"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="30dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_location" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
